<Window x:Class="SDHManagement2.AdditionalWindows.DropConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDHManagement2.AdditionalWindows"
        mc:Ignorable="d"
        Title="DropConnectionWindow" Height="250" Width="250">
    <Grid>
        <Label x:Name="nameLabel" Content="NodeName" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18.667" Width="222" HorizontalContentAlignment="Center"/>
        <Label x:Name="label" Content="Existing connections" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="222" HorizontalContentAlignment="Center"/>
        <ListBox x:Name="connectionsBox" HorizontalAlignment="Left" Height="87" Margin="10,81,0,0" VerticalAlignment="Top" Width="222"/>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="79,173,0,0" VerticalAlignment="Top" Width="75" Click="deleteButton_Click"/>

    </Grid>
</Window>
